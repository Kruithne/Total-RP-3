	<ScrollingMessageFrame name="TRP3_LogsFrame" secureMixin="ScrollingMessageFrameMixin" intrinsic="true">
		<Frames>
			<Frame parentKey="FontStringContainer" clipChildren="true" propagateHyperlinksToParent="true" setAllPoints="true" />
		</Frames>
		<Scripts>
			<OnLoad method="OnPreLoad" intrinsicOrder="precall" />
			<OnUpdate method="OnPostUpdate" intrinsicOrder="postcall" />
			<OnShow method="OnPostShow" intrinsicOrder="postcall" />
			<OnHide method="OnPostHide" intrinsicOrder="postcall" />
			<OnSizeChanged method="OnPreSizeChanged" intrinsicOrder="precall" />
			<OnMouseDown method="OnPostMouseDown" intrinsicOrder="postcall" autoEnableInput="false" />
			<OnMouseUp method="OnPostMouseUp" intrinsicOrder="postcall" autoEnableInput="false" />
		</Scripts>
	</ScrollingMessageFrame>

	<Frame name="TRP3_ResizeShadowFrame" parent="UIParent" frameStrata="FULLSCREEN" hidden="true" resizable="true">
		<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true" bgFile="Interface\DialogFrame\UI-DialogBox-Background">
			<EdgeSize><AbsValue val="24"/></EdgeSize><TileSize><AbsValue val="400"/></TileSize>
			<BackgroundInsets><AbsInset left="5" right="5" top="5" bottom="5"/></BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString parentKey="text" inherits="GameFontNormal" setAllPoints="true">
					<Color b="1.0" r="1.0" g="1.0"/>
				</FontString>
			</Layer>
		</Layers>
	</Frame>

	<Script file="assertions.lua"/>
	<!-- Events must be loaded as soon as possible so we can listen to the WORKFLOW_ON_LOADED event here -->
	<Script file="events.lua"/>
	<Script file="strings.lua"/>
	<Script file="GUID.lua"/>
	<Script file="colors.lua"/>
	<Script file="math.lua"/>
	<Script file="logs.lua"/>
	<Script file="serial.lua"/>
	<Script file="tables.lua"/>
	<Script file="messages.lua"/>
	<Script file="localization.lua"/>
	<Script file="unit.lua"/>
	<Script file="animations.lua"/>
	<Script file="html.lua"/>
	<Script file="sounds.lua"/>
	<Script file="gameEvents.lua"/>
	<Script file="textures.lua"/>
	<Include file="tooltips.xml"/>
	<Script file="frames.lua"/>
	<Script file="map.lua"/>
	<Script file="workarounds.lua"/>
	<Script file="deprecated.lua"/>

</Ui>