	<GameTooltip name="TRP3_MainTooltip" frameStrata="TOOLTIP" parent="UIParent" inherits="GameTooltipTemplate" />

	<Script file="tooltips.lua"/>

	<!-- Defines the scripts that will be inherited by a frame that wants to show a tooltip on mouseover -->
	<Frame name="TRP3_MainTooltipMouseOverScripts" virtual="true" mixin="TRP3_MainTooltipMouseOverScriptMixin">
		<Scripts>
			<OnEnter method="OnEnter" intrinsicOrder="postcall" />
			<OnLeave method="OnLeave" intrinsicOrder="postcall" />
		</Scripts>
	</Frame>

